  "description": "Write your components styles in JavaScript, without selectors.",
  "repository": "https://github.com/BenoitZugmeyer/sans-sel",
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "babel-register": "^6.6.0",
    "eslint": "^3.10.0",
    "jest": "^17.0.0",
    "rollup": "^0.36.3",
    "rollup-plugin-babel": "^2.4.0"
  },
  "scripts": {
    "prepublish": "npm run dist && npm run dev",
    "dist": "mkdir -p dist && rollup -c | uglifyjs -c -m -d '__DEV__=false' > dist/sansSel.min.js",
    "dev": "mkdir -p dist && rollup -c --intro 'var __DEV__ = true;' > dist/sansSel.js",
    "test": "jest",
    "lint": "eslint ."
  },
  "main": "./dist/sansSel",
  "files": [
    "dist/sansSel.js",
    "dist/sansSel.min.js",
    "src/*"
  ],
  "jest": {
    "globals": {
      "__DEV__": true
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/_\\w+\\.js"
    ]
  }
}
